{
  "$schema": "https://github.com/Azure/data-api-builder/releases/latest/download/dab.draft.schema.json",
  "data-source": {
    "database-type": "mssql",
    "connection-string": "@env('DATABASE_CONNECTION_STRING')",
    "options": {
      "set-session-context": false
    }
  },
  "runtime": {
    "rest": {
      "enabled": true,
      "path": "/api",
      "request-body-strict": true
    },
    "graphql": {
      "enabled": true,
      "path": "/graphql",
      "allow-introspection": true
    },
    "host": {
      "cors": {
        "origins": ["*"],
        "allow-credentials": false
      },
      "authentication": {
        "provider": "StaticWebApps"
      },
      "mode": "production"
    }
  },
  "entities": {
    "VMSize": {
      "source": {
        "object": "dbo.VMSizes",
        "type": "table"
      },
      "graphql": {
        "enabled": true,
        "type": {
          "singular": "VMSize",
          "plural": "VMSizes"
        }
      },
      "rest": {
        "enabled": true,
        "path": "/vmsizes"
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            {
              "action": "read"
            }
          ]
        }
      ],
      "mappings": {
        "id": "Id",
        "name": "Name",
        "cpu": "CPU",
        "memoryGB": "MemoryGB",
        "iops": "IOPS",
        "maxNICS": "MaxNICS",
        "maxDisks": "MaxDisks",
        "acceleratedNetworking": "AcceleratedNetworking",
        "ephemeralOSDiskSupported": "EphemeralOSDiskSupported",
        "region": "Region"
      }
    }
  }
}
